<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds" method="POST" novalidate class="validated-form"  enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input required class="form-control" type="text" name="campground[title]" id="title">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input required class="form-control" type="text" name="campground[location]" id="location">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Camping Price</label>
                <div class="input-group">
                    <span id="price-label" class="input-group-text">$</span>
                    <input required placeholder="price" id="price" type="text" class="form-control" aria-label="price" name="campground[price]">
                    <span class="input-group-text">.00</span>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea required class="form-control" type="text" name="campground[description]" id="location"></textarea>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Upload Images</label>
                <input name="image" class="form-control" type="file" id="image" multiple>
            </div>
            <div class="mb-3">
                <button class="btn btn-success" type="submit">Add Campground</button>
            </div>
        </form>
        <a href="/campgrounds">Back</a>
    </div>
</div>
